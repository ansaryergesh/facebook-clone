<% @users.each do |user| %>
  <%if user.id != current_user.id%>
    <li><%= link_to "Check profile", user_path(user) %></li>
    <%= user.first_name %>
    <%= user.last_name %><br>
    <%= user.profile_pic %>
    <br>
    <%if friends.include?(user)%>
      <p> Drop </p>
    <%else%>
      <%= button_to  user_friendships_path(user), method: :post, class:"btn btn-default" do %>
        <i class="pull-right fas fa-user-plus">Add friend</i>
      <%end%>
    <%end%>
    <hr>
  <%end%>
<% end %>